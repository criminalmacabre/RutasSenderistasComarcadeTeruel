<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_rutas_andatela"
    tools:context="com.comarca.turismo.rutassenderistascomarcadeteruel.RutasAndatela">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/senderosestrella"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.80"
            android:text="@string/boton1estrella" />

        <Button
            android:id="@+id/senderosgranrecorrido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.80"
            android:text="@string/boton2estrella" />

        <Button
            android:id="@+id/senderospequerecorrido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.80"
            android:text="@string/boton3estrella" />

        <Button
            android:id="@+id/rutaslocales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.80"
            android:text="@string/boton4estrella" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
